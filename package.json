{
  "name": "governance-bridge",
  "version": "1.0.0",
  "description": "governance bridge repo",
  "main": "index.js",
  "scripts": {
    "deploy:gov-bridge:optimism-testnet": "hardhat deploy --tags 'OptimisticGov,Greeter' --network optimism-testnet",
    "deploy:gov-bridge:arbitrum-testnet": "hardhat deploy --tags 'ArbitrumGov,Greeter' --network arbitrum-testnet",
    "run-env": "npm i && tail -f /dev/null",
    "test": "hardhat test",
    "test-fork": "MAINNET_FORK=true hardhat test test/fork/crosschain-bridges.spec.ts",
    "clean": "hardhat clean",
    "hardhat": "hardhat",
    "hardhat:kovan": "hardhat --network kovan",
    "hardhat:tenderlyMain": "hardhat --network tenderlyMain",
    "hardhat:ropsten": "hardhat --network ropsten",
    "hardhat:rinkeby": "hardhat --network rinkeby",
    "hardhat:goerli": "hardhat --network goerli",
    "hardhat:main": "hardhat --network main",
    "hardhat:docker": "hardhat --network hardhatevm_docker",
    "hardhat:mumbai": "hardhat --network mumbai",
    "hardhat:matic": "hardhat --network matic",
    "hardhat:optimism": "hardhat --network optimism",
    "hardhat:optimism-testnet": "hardhat --network optimism-testnet",
    "hardhat:arbitrum": "hardhat --network arbitrum",
    "hardhat:arbitrum-testnet": "hardhat --network arbitrum-testnet",
    "compile": "SKIP_LOAD=true hardhat compile",
    "console:fork": "MAINNET_FORK=true hardhat console",
    "coverage": "hardhat coverage",
    "format": "prettier --write .",
    "lint": "eslint ."
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ethersproject/abi": "^5.1.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.11",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.3.2",
    "@tenderly/hardhat-tenderly": "^1.1.0-beta.5",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.0.2",
    "@types/bluebird": "^3.5.36",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.1",
    "bluebird": "^3.7.2",
    "chai": "^4.3.4",
    "defender-relay-client": "^1.4.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.0",
    "hardhat": "^2.9.5",
    "husky": "^6.0.0",
    "prettier": "2.2.1",
    "prettier-plugin-solidity": "*",
    "pretty-quick": "^3.1.0",
    "solidity-coverage": "^0.7.21",
    "tmp-promise": "^3.0.2",
    "ts-node": "^10.2.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typechain": "^5.1.2",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern 'contracts/**/*.sol' --pattern 'helpers/**/*.ts'  --pattern 'test/**/*.ts' --pattern 'tasks/**/*.ts'"
    }
  }
}
